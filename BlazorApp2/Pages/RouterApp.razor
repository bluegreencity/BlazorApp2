@using BlazorApp2.Shared

<Router AppAssembly="@typeof(Startup).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout2)"/>
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout2)">
            <h1>Page not found</h1>
            <p>Sorry, there's nothing at this address. hhh.</p>
        </LayoutView>
    </NotFound>
</Router>